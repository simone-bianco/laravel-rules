{
  "name": "simone-bianco/laravel-rules",
  "version": "2.0.0",
  "description": "Laravel package that centralizes and composes reusable validation rules via a factory and configuration, with an Artisan command to auto-generate documentation for the rules. Ideal for keeping validation DRY and consistent across application domains.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {"name": "Simone Bianco"}
  ],
  "require": {
      "php": ">=8.3",
      "illuminate/support": "^12.0",
      "illuminate/validation": "^12.0",
      "illuminate/console": "^12.0",
      "illuminate/cache": "^12.0",
      "spatie/laravel-package-tools": "^1.92"
  },
  "require-dev": {
      "phpunit/phpunit": "^12.3",
      "orchestra/testbench": "^10.6",
      "pestphp/pest": "^3.8",
      "pestphp/pest-plugin-laravel": "^3.2"
  },
  "autoload": {
    "psr-4": {
      "SimoneBianco\\LaravelRules\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SimoneBianco\\LaravelRules\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "SimoneBianco\\LaravelRules\\LaravelRulesServiceProvider"
      ]
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
